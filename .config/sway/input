input {
	type:keyboard {
		repeat_rate 40
		repeat_delay 280
		xkb_layout us,cz(qwerty)
		xkb_options "grp:alt_shift_toggle, caps:swapescape",
		xkb_numlock enabled
	}
	type:touchpad {
		natural_scroll enabled
		scroll_factor 0.4
		pointer_accel 0.4
		accel_profile flat
		tap enabled
		dwt enabled
	}
	type:pointer {
		accel_profile flat
		pointer_accel 0.2
	}
}

seat * {
	hide_cursor 30000
	hide_cursor when-typing enable
}
